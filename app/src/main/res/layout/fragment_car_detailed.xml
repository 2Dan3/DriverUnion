<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CarDetailedFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardElevation="12sp"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="5dp">
        <ImageView
            android:id="@+id/detailed_model_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/car_hb_shape"
            app:layout_collapseMode="parallax"/>

        <!--            <androidx.appcompat.widget.Toolbar-->
        <!--                android:id="@+id/toolbar"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="?attr/actionBarSize"-->
        <!--                app:layout_collapseMode="pin"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start|bottom"
            android:paddingBottom="3sp"
            android:background="@color/black_transparent">

            <TextView
                android:id="@+id/detailed_model_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:paddingStart="12sp"
                android:textColor="@color/white_smoked"
                android:text=""
                android:textSize="15sp"
                android:textStyle="italic"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/detailed_model_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:paddingEnd="10sp"
                android:textColor="@color/white_smoked"
                android:layout_marginEnd="5sp"
                android:gravity="end"
                android:text=""
                android:textSize="15sp"
                android:textStyle="italic"
                android:textAppearance="?attr/textAppearanceListItem"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:elevation="8dp"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="8sp"
    android:layout_marginVertical="10sp">
<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10sp">

        <LinearLayout
            android:layout_marginTop="1sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Length"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:src="@mipmap/ic_car_length"/>
            <TextView
                android:id="@+id/detailed_model_length"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".005"
                android:textStyle="bold"
                android:gravity="end"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Width"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:src="@mipmap/ic_car_width"/>
            <TextView
                android:id="@+id/detailed_model_width"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".005"
                android:textStyle="bold"
                android:gravity="end"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Height"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:src="@mipmap/ic_car_height"/>
            <TextView
                android:id="@+id/detailed_model_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".005"
                android:textStyle="bold"
                android:gravity="end"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Wheelbase"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:src="@mipmap/ic_car_wheelbase"/>
            <TextView
                android:id="@+id/detailed_model_wheelbase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".008"
                android:textStyle="bold"
                android:gravity="end"
                android:text=""/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="1sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:gravity="start"
                android:text="Trunk size"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:src="@mipmap/ic_car_trunk"/>
            <TextView
                android:id="@+id/detailed_model_trunk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="end"
                android:text=""/>

        </LinearLayout>



        <!--                    <TextView-->
        <!--                        android:layout_width="match_parent"-->
        <!--                        android:layout_height="wrap_content"-->
        <!--                        android:layout_marginTop="10dp"-->
        <!--                        android:gravity="center"-->
        <!--                        android:text="nesto"/>-->


    </LinearLayout>
    </ScrollView>
<!--</androidx.core.widget.NestedScrollView>-->
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_distributor"
            android:layout_width="0sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="68sp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="8sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_used_cars"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_distributor_logo"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="2sp"
                android:src="@mipmap/car_manufacturer_logo7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="new car"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_used_cars"
            android:layout_width="0sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="68sp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="8sp"
            app:cardElevation="6dp"

            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@id/card_distributor"
            app:layout_constraintEnd_toStartOf="@id/card_car_parts"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/used_cars_website"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="used car"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_car_parts"
            android:layout_width="0sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="68sp"
            android:layout_marginTop="1dp"
            android:layout_marginHorizontal="8sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@id/card_used_cars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10sp"
                android:layout_marginBottom="6sp"
                android:src="@mipmap/car_parts_website"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="car parts"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10sp"
            android:background="#C1CFDA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_car_parts"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_powertrains"
            android:layout_width="0sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="68sp"
            android:layout_margin="8sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_forums"
            app:layout_constraintTop_toBottomOf="@id/divider">
            <ImageView
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_car_engine"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="powertrains"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_forums"
            android:layout_width="0sp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="68sp"
            android:layout_margin="8sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@id/card_powertrains"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider">
            <ImageView
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:src="@mipmap/ic_forums"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="forum"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10sp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_powertrains"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
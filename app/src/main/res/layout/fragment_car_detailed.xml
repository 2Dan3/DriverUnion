<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarDetailedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="24dp"
            android:layout_weight=".85"
            app:cardCornerRadius="24dp"
            app:cardElevation="12sp">

            <ImageView
                android:id="@+id/detailed_model_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/car_hb_shape"
                app:layout_collapseMode="parallax" />

            <!--            <androidx.appcompat.widget.Toolbar-->
            <!--                android:id="@+id/toolbar"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="?attr/actionBarSize"-->
            <!--                app:layout_collapseMode="pin"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:background="@color/black_transparent"
                android:orientation="horizontal"
                android:paddingBottom="3sp">

                <TextView
                    android:id="@+id/detailed_model_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:paddingStart="12sp"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white_smoked"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/detailed_model_years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:layout_weight=".01"
                    android:gravity="end"
                    android:paddingEnd="10sp"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/white_smoked"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1.8"
            android:elevation="8dp"
            app:cardCornerRadius="20dp">
            <!--    <androidx.core.widget.NestedScrollView-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="start"
                            android:text="Length"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:src="@mipmap/ic_car_length" />

                        <TextView
                            android:id="@+id/detailed_model_length"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".005"
                            android:gravity="end"
                            android:text=""
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="start"
                            android:text="Width"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:src="@mipmap/ic_car_width" />

                        <TextView
                            android:id="@+id/detailed_model_width"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".005"
                            android:gravity="end"
                            android:text=""
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="start"
                            android:text="Height"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:src="@mipmap/ic_car_height" />

                        <TextView
                            android:id="@+id/detailed_model_height"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".005"
                            android:gravity="end"
                            android:text=""
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="start"
                            android:text="Wheelbase"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:src="@mipmap/ic_car_wheelbase" />

                        <TextView
                            android:id="@+id/detailed_model_wheelbase"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".008"
                            android:gravity="end"
                            android:text=""
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="start"
                            android:text="Trunk size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:src="@mipmap/ic_car_trunk" />

                        <TextView
                            android:id="@+id/detailed_model_trunk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".01"
                            android:gravity="end"
                            android:text=""
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <!--                    <TextView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginTop="10dp"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:text="nesto"/>-->


                </LinearLayout>
            </ScrollView>
            <!--</androidx.core.widget.NestedScrollView>-->
        </androidx.cardview.widget.CardView>

        <!--    <androidx.coordinatorlayout.widget.CoordinatorLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content">-->
        <!--    </androidx.coordinatorlayout.widget.CoordinatorLayout>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottom_sheet_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4sp"
        android:background="@drawable/background_gradient_light_blue"
        android:elevation="12dp"
        android:paddingHorizontal="2sp"
        app:behavior_peekHeight="90sp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_drag"
            android:layout_gravity="center_horizontal"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:paddingTop="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <!--                <View-->
            <!--                    android:id="@+id/divider1"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="1dp"-->
            <!--                    android:layout_marginHorizontal="10sp"-->
            <!--                    android:background="@color/black"-->
            <!--                    app:layout_constraintStart_toStartOf="parent"-->
            <!--                    app:layout_constraintEnd_toEndOf="parent"-->
            <!--                    app:layout_constraintTop_toTopOf="parent"/>-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_distributor"
                android:layout_width="0sp"
                android:layout_height="68sp"
                android:layout_marginEnd="2sp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toStartOf="@id/card_used_cars"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_distributor_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="10sp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/car_manufacturer_logo7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transparent"
                    android:gravity="center"
                    android:text="new car"
                    android:textColor="@color/white_smoke"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_used_cars"
                android:layout_width="0sp"
                android:layout_height="68sp"
                android:layout_marginHorizontal="3sp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"

                app:layout_constraintEnd_toStartOf="@id/card_car_parts"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/card_distributor"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/used_cars_website" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transparent"
                    android:gravity="center"
                    android:text="used car"
                    android:textColor="@color/white_smoke"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_car_parts"
                android:layout_width="0sp"
                android:layout_height="68sp"
                android:layout_marginStart="2sp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/card_used_cars"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginBottom="6sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/car_parts_website" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transparent"
                    android:gravity="center"
                    android:text="car parts"
                    android:textColor="@color/white_smoke"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_car_parts" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_powertrains"
                android:layout_width="0sp"
                android:layout_height="68sp"
                android:layout_marginVertical="8sp"
                android:layout_marginEnd="3sp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toStartOf="@id/card_forums"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/ic_car_engine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transparent"
                    android:gravity="center"
                    android:text="powertrains"
                    android:textColor="@color/white_smoke"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_forums"
                android:layout_width="0sp"
                android:layout_height="68sp"
                android:layout_marginVertical="8sp"
                android:layout_marginStart="3sp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/card_powertrains"
                app:layout_constraintTop_toTopOf="@id/divider">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5sp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_forums" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/black_transparent"
                    android:gravity="center"
                    android:text="forum"
                    android:textColor="@color/white_smoke"
                    android:textSize="10sp"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

<!--            <View-->
<!--                android:id="@+id/divider2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:layout_marginHorizontal="10sp"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:background="?android:attr/listDivider"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/card_powertrains" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_eval_year"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="2016"/>

    <androidx.cardview.widget.CardView
        android:gravity="center"
        app:cardBackgroundColor="#FFDC00"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="20sp"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <LinearLayout
            android:background="@drawable/background_gradient_light"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_adult_occupant"
                android:layout_margin="8sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Adult occupant"/>
            <TextView
                android:id="@+id/tv_adult_safety"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="95%"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:gravity="center"
        app:cardBackgroundColor="#328FFF"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="20sp"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <LinearLayout
            android:background="@drawable/background_gradient_light"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_child_occupant"
                android:layout_margin="8sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Child occupant"/>
            <TextView
                android:id="@+id/tv_child_safety"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="88%"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:gravity="center"
        app:cardBackgroundColor="#0A9A00"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="20sp"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <LinearLayout
            android:background="@drawable/background_gradient_light"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pedestrian"
                android:layout_margin="8sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Vulnerable road users"/>
            <TextView
                android:id="@+id/tv_vulnerable_safety"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="83%"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:gravity="center"
        app:cardBackgroundColor="#782087"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="20sp"
        android:layout_height="0dp"
        android:layout_weight=".1">
        <LinearLayout
            android:background="@drawable/background_gradient_light"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                android:src="@drawable/ic_safety_assist"
                android:layout_margin="8sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Safety assist"/>
            <TextView
                android:id="@+id/tv_active_safety"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="80%"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/chassis_option_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="16sp"
    android:layout_marginHorizontal="70sp">
    <LinearLayout
        android:background="@drawable/background_border_light"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1sp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/iv_car_chassis_shape"
                android:layout_width="match_parent"
                android:layout_height="130sp"
                android:layout_margin="1sp"
                android:scaleType="centerCrop"
                android:src="@mipmap/car_hb_shape"/>

            <TextView
                android:id="@+id/tv_car_chassis_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:textStyle="italic|bold"
                android:text="hatchback"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:paddingHorizontal="10sp"
                android:gravity="top|center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/model_option_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="16sp">
    <LinearLayout
        android:background="@drawable/background_border_light"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1sp"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/iv_car_model"
                android:layout_width="270sp"
                android:maxWidth="270sp"
                android:layout_height="150sp"
                android:scaleType="centerCrop"
                android:src="@mipmap/car_coupe_shape"/>

            <TextView
                android:id="@+id/tv_car_model_name"
                android:layout_width="270sp"
                android:maxWidth="270sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="6"
                android:textAllCaps="true"
                android:textColor="@color/white_smoke"
                android:background="@color/black_transparent"
                android:textSize="15sp"
                android:paddingHorizontal="10sp"
                android:gravity="top|center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>